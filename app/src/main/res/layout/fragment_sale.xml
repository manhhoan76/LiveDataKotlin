               android:gravity="center"
               android:layout_width="158dp"
               android:layout_height="0dp"
               android:id="@+id/textView5" android:layout_marginTop="124dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497" android:textSize="30sp"/>
       <Button
               android:textAllCaps="false"
               android:text="Do Work"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btnDoWork" android:layout_marginTop="64dp"
               app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
