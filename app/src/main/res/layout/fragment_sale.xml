               android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
       <Button
               android:text="Cancel Work"
               android:textAllCaps="false"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btnCancelWork" android:layout_marginTop="48dp"
               app:layout_constraintTop_toBottomOf="@+id/btnDoWithConstrain" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="17dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>