<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginVertical="0.5dp"
        android:background="#ffff"
>

    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imgItemDetail"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:orientation="vertical"
    >
        <TextView
                android:textColor="#000"
                android:textAllCaps="false"
                android:text="TextView"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/txtItemName"
                android:textSize="14sp"
        />
        <TextView
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="TextView"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/txtItemAddress"
        />
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewLike" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="60dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.521"/>
            <TextView
                    android:text="TextView"
                    android:textSize="14sp"
                    android:textFontWeight="800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewComment" app:layout_constraintStart_toEndOf="@+id/textViewLike"
                    android:layout_marginStart="12dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.521"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</LinearLayout>