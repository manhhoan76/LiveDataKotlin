<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="15dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke android:color="#2979ff" android:width="1.5dp"/>
        </shape>
        <selector android:visible="true" >

            <item android:state_selected="false" android:state_pressed="true" android:drawable="@color/color.white"/>
            <item android:state_selected="true" android:state_pressed="true"  android:drawable="@color/color.blue.ll"/>
        </selector>
    </item>


</layer-list>
